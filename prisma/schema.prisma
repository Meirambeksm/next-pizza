generator client {
    provider = "prisma-client-js"
} // 8

datasource db {
    provider = "postgresql"
    url = env("POSTGRES_URL") // 16 adjust
    directUrl = env("POSTGRES_URL_NON_POOLING") // 17 
} // 9

model User {
    id Int @id @default(autoincrement())

    fullName String
    email    String
    password String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
} // 10

model Product {
    id Int @id @default(autoincrement())

    name String
    imageUrl String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
} // 11

